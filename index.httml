<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Happn App - Home</title>
<style>
:root{--bg:#fff;--card:#f9f9f9;--primary:#ff385c;--muted:#6b7280}
body{margin:0;font-family:Arial,sans-serif;background:var(--bg);color:#111}
.app{max-width:600px;margin:16px auto;padding:16px}
.header{display:flex;align-items:center;justify-content:space-between}
.logo{font-weight:900;font-size:1.5rem;color:var(--primary)}
.search{display:flex;align-items:center;gap:8px;background:#f0f0f0;padding:6px 10px;border-radius:999px}
.search input{border:none;outline:none;background:transparent;width:150px}
.hero{margin-top:16px;padding:16px;background:var(--primary);border-radius:12px;color:#fff;text-align:center}
.grid{display:grid;grid-template-columns:repeat(2,1fr);gap:12px;margin-top:16px}
.card{background:var(--card);padding:12px;border-radius:10px;box-shadow:0 2px 6px rgba(0,0,0,.1);text-align:center}
.btn{background:var(--primary);border:none;color:#fff;padding:8px 12px;border-radius:8px;cursor:pointer;font-weight:700;margin-top:8px}
.small{color:var(--muted);font-size:.85rem}
.footer{margin-top:20px;text-align:center;color:var(--muted)}
@media(max-width:500px){.grid{grid-template-columns:1fr}}
</style>
</head>
<body>
<div class="app">
  <header class="header">
    <div class="logo">Happn</div>
    <div class="search">
      <input id="search" placeholder="Search people"/>
    </div>
  </header>

  <section class="hero">
    <h1>Meet People Nearby</h1>
    <p>Connect, chat, and discover new people around you.</p>
    <button class="btn" id="startBtn">Get Started</button>
  </section>

  <section>
    <h2>People Nearby</h2>
    <div class="grid" id="peopleGrid"></div>
  </section>

  <footer class="footer">Happn Demo App</footer>
</div>

<script>
const people=[
  {name:'Alice',age:25,location:'New York'},
  {name:'Bob',age:28,location:'London'},
  {name:'Clara',age:23,location:'Paris'},
  {name:'David',age:30,location:'Berlin'}
];

function makeCard(p){
  const div=document.createElement('div'); div.className='card';
  div.innerHTML=`<div style='font-weight:800'>${p.name}, ${p.age}</div><div class='small'>${p.location}</div><button class='btn'>Say Hi</button>`;
  div.querySelector('button').addEventListener('click',()=>alert('Hi '+p.name+'!'));
  return div;
}

people.forEach(p=>document.getElementById('peopleGrid').appendChild(makeCard(p)));

document.getElementById('search').addEventListener('input',e=>{
  const q=e.target.value.toLowerCase();
  [...document.getElementById('peopleGrid').children].forEach(card=>{
    card.style.display=card.querySelector('div').textContent.toLowerCase().includes(q)?'block':'none';
  });
});

document.getElementById('startBtn').addEventListener('click',()=>alert('Start connecting with people nearby!'));
</script>
</body>
</html>
